.chat-side
  .chat-side__user
    .chat-side__user__name
      = current_user.name
    .chat-side__user__edit-user
      = link_to edit_user_path(current_user) do
        = fa_icon 'cog', class: 'icon'
    .chat-side__user__new-group
      = link_to new_group_path do
        = fa_icon 'pencil-square-o', class: 'icon'

  .chat-side__groups
    - current_user.groups.each do |group|
      .chat-side__groups__group
        - current_user.groups.each do |group|
          = link_to group_messages_path(group) do
            .chat-side__groups__group__name
              = group.name
            .chat-side__groups__group__message
              メッセージはまだありません。
